<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>Archetype Created Web Application</display-name>
	<context-param>
		<description>Location to store uploaded profile file</description>
		<param-name>user-upload</param-name>
		<param-value>
         resources/uploads/users/
      </param-value>
	</context-param>
	<context-param>
		<description>Location to store uploaded temp file</description>
		<param-name>temp-upload</param-name>
		<param-value>
         resources/uploads/temp/
      </param-value>
	</context-param>
	<context-param>
		<description>Location to store uploaded properties file</description>
		<param-name>prop-upload</param-name>
		<param-value>
         resources/uploads/props/
      </param-value>
	</context-param>
	<error-page>
		<error-code>404</error-code>
		<location>/views/ErrorPage.jsp</location>
	</error-page>
	<servlet>
		<servlet-name>SignUpController</servlet-name>
		<servlet-class>com.rex.controller.SignUp</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ClientLoginController</servlet-name>
		<servlet-class>com.rex.controller.client.Login</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdminLoginController</servlet-name>
		<servlet-class>com.rex.controller.admin.Login</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EmailChecker</servlet-name>
		<servlet-class>com.rex.controller.EmailChecker</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoutController</servlet-name>
		<servlet-class>com.rex.controller.Logout</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ProfilePicUpdateController</servlet-name>
		<servlet-class>com.rex.controller.ProfilePicUpdate</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdminUpdateController</servlet-name>
		<servlet-class>com.rex.controller.admin.Update</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UpdateController</servlet-name>
		<servlet-class>com.rex.controller.client.Update</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ActivationController</servlet-name>
		<servlet-class>com.rex.controller.admin.client.Activate</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteController</servlet-name>
		<servlet-class>com.rex.controller.admin.client.Delete</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PromotionController</servlet-name>
		<servlet-class>com.rex.controller.admin.client.Promote</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ClientUpdateController</servlet-name>
		<servlet-class>com.rex.controller.admin.client.Update</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PicUpdate</servlet-name>
		<servlet-class>com.rex.controller.admin.client.PicUpdate</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ActivateMe</servlet-name>
		<servlet-class>com.rex.controller.ActivateMe</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SellProperty</servlet-name>
		<servlet-class>com.rex.controller.client.SellProperty</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UserMail</servlet-name>
		<servlet-class>com.rex.controller.UserMail</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AddressChange</servlet-name>
		<servlet-class>com.rex.controller.AddressChange</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Password</servlet-name>
		<servlet-class>com.rex.controller.admin.client.Password</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Features</servlet-name>
		<servlet-class>com.rex.controller.prop.Features</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Informations</servlet-name>
		<servlet-class>com.rex.controller.prop.Informations</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AddImage</servlet-name>
		<servlet-class>com.rex.controller.prop.image.AddImage</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RemoveImage</servlet-name>
		<servlet-class>com.rex.controller.prop.image.RemoveImage</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Edit</servlet-name>
		<servlet-class>com.rex.controller.prop.Edit</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Delete</servlet-name>
		<servlet-class>com.rex.controller.prop.Delete</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Like</servlet-name>
		<servlet-class>com.rex.controller.client.Like</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SignUpController</servlet-name>
		<url-pattern>/SignUp</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ClientLoginController</servlet-name>
		<url-pattern>/Client-Login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AdminLoginController</servlet-name>
		<url-pattern>/Admin-Login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EmailChecker</servlet-name>
		<url-pattern>/EmailChecker</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutController</servlet-name>
		<url-pattern>/Logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ProfilePicUpdateController</servlet-name>
		<url-pattern>/ProfilePicUpdate</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AdminUpdateController</servlet-name>
		<url-pattern>/Admin-Update</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateController</servlet-name>
		<url-pattern>/Client-Update</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ActivationController</servlet-name>
		<url-pattern>/Admin-Client-Activation</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteController</servlet-name>
		<url-pattern>/Admin-Client-Delete</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PromotionController</servlet-name>
		<url-pattern>/Admin-Client-Promote</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ClientUpdateController</servlet-name>
		<url-pattern>/Admin-Client-Update</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PicUpdate</servlet-name>
		<url-pattern>/Admin-Client-Profile-Update</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ActivateMe</servlet-name>
		<url-pattern>/ActivateMe</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SellProperty</servlet-name>
		<url-pattern>/SellProperty</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserMail</servlet-name>
		<url-pattern>/User-Mail</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddressChange</servlet-name>
		<url-pattern>/Change-Address</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Password</servlet-name>
		<url-pattern>/Admin-Client-Change-Password</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Features</servlet-name>
		<url-pattern>/Prop-Change-Features</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Informations</servlet-name>
		<url-pattern>/Prop-Change-Informations</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddImage</servlet-name>
		<url-pattern>/Prop-Add-Image</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RemoveImage</servlet-name>
		<url-pattern>/Prop-Remove-Image</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Edit</servlet-name>
		<url-pattern>/Prop-Edit</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Delete</servlet-name>
		<url-pattern>/Prop-Delete</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Like</servlet-name>
		<url-pattern>/Client-Like-Prop</url-pattern>
	</servlet-mapping>
	<jsp-config>
		<taglib>
			<taglib-uri>/WEB-INF/functions</taglib-uri>
			<taglib-location>/WEB-INF/functions.tld</taglib-location>
		</taglib>
	</jsp-config>
</web-app>
